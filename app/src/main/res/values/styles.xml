<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subText">
        <item name="android:textSize">14sp</item>
        <item name="android:color">#000</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">#000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="SalaryTextView">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#23bf18</item>
    </style>

    <style name="ExpensesTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#c62535</item>
    </style>

    <style name="ShowMoney">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>
